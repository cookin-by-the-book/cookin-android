<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editConstraintView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation_add_recipe">

    <EditText
        android:id="@+id/editTextRecipeName"
        android:layout_width="325dp"
        android:layout_height="49dp"
        android:layout_marginTop="100dp"
        android:autofillHints=""
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/recipe_name"
        android:inputType="text|textAutoComplete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editCookTime"
        android:layout_width="123dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/cook_time"
        android:inputType="none|number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRecipeName" />

    <EditText
        android:id="@+id/editPrepTime"
        android:layout_width="123dp"
        android:layout_height="47dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/prep_time"
        android:inputType="none|number"
        app:layout_constraintEnd_toStartOf="@+id/editServings"
        app:layout_constraintStart_toEndOf="@+id/editCookTime"
        app:layout_constraintTop_toBottomOf="@+id/editTextRecipeName" />

    <EditText
        android:id="@+id/editServings"
        android:layout_width="109dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:autofillHints=""
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/servings"
        android:inputType="none|number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRecipeName" />

    <ImageButton
        android:id="@+id/editFoodPictureButton"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:contentDescription="TODO"
        android:src="@android:drawable/ic_menu_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toEndOf="@+id/editTextRecipeName"
        app:layout_constraintTop_toTopOf="@+id/editTextRecipeName" />

    <TextView
        android:id="@+id/editIngredientsLabel"
        android:layout_width="147dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="325dp"
        android:text="@string/ingredients"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCookTime" />

    <TextView
        android:id="@+id/editStepsLabel"
        android:layout_width="147dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="325dp"
        android:text="@string/steps"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editIngredientsListView" />

    <ImageButton
        android:id="@+id/editAddIngredientButton"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_marginEnd="24dp"
        android:background="#FFFFFF"
        android:contentDescription="TODO"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editIngredientsLabel" />

    <ListView
        android:id="@+id/editIngredientsListView"
        android:layout_width="401dp"
        android:layout_height="183dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/editIngredientsLabel"
        tools:layout_editor_absoluteX="4dp" />

    <ImageButton
        android:id="@+id/editAddStepButton"
        android:layout_width="36dp"
        android:layout_height="34dp"
        android:layout_marginEnd="24dp"
        android:background="#FFFFFF"
        android:contentDescription="TODO"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editStepsLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>